{
    "manifest_version": 3,
    "name": "My Prayer",
    "description": "Find Prayers Times in Your Location",
    "version": "1.0.0",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "imgs/icon-16.png",
        "32": "imgs/icon-32.png",
        "64": "imgs/icon-64.png",
        "128": "imgs/icon-128.png"
    },

    "background": {
        "service_worker": "background.js",
        "type": "module"
    },

    "permissions": [
        "storage",
        "geolocation"
    ],

    "content_scripts": [
        {
            "js": [
                "popup/main.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}